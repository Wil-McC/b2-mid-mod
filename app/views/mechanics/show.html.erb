<h1><%= @mechanic.name %>'s Information Page</h1>

<ul>
  <li>Name: <%= @mechanic.name %></li>
  <li>Years Experience: <%= @mechanic.years_experience %></li>
</ul>
<section class="rides">
  <h2>Rides Serviced</h2>
  <% @mechanic.rides_sorted.each do |ride| %>
    <ul>
      <% if ride.open %>
          <li><%= ride.name %></li>
      <% end %>
    </ul>
  <% end %>
</section>
<section class="addform">
  <h2>Add Ride to Service List</h2>
  <%= form_with url: "/mechanics/#{@mechanic.id}", method: :patch, local: true do |f| %>
    <%= f.label :ride_id %>
    <%= f.number_field :ride_id %>
    <%= f.submit 'Add Ride' %>
  <% end %>
</section>
